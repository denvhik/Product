@model Frontend.Models.ViewModel.ProductModelView
@{
    ViewData["Title"] = "Edit Product";
}

<h3>@ViewData["Title"]</h3>
<hr />

<form method="post" asp-action="UpdateProduct">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <div class="form-group">
        <label for="ProductName">Product Name</label>
        <input type="text" name="ProductName" class="form-control" value="@Model.ProductName" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="GroupId">Select Group</label>
        <select name="GroupId" class="form-control">
            <!-- Начально будет выбрано второе значение -->
            @foreach (var group in Model.Groups)
            {
                <option value="@group.GroupId">@group.GroupName</option>
            }
        </select>
    </div>
    <div class="col-lg-12 d-grid">
        <button type="submit" class="btn btn-primary green-button" style="margin-top:10px">Edit</button>
    </div>
</form>